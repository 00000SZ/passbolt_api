<ul>
	<li class="comment-wrapper">
		<div class="comment add">
			<div class="author profile picture"><a href="#"><img src="img/user.png"></a></div>
			<div class="input textarea required">
				<label for="Comment">Add a comment</label>
				<input name="data[comment][parent_id]" class="comment_parent_id required" maxlength="36" type="hidden" >
				<input name="data[comment][foreign_id]" class="comment_foreign_id required" maxlength="36" type="hidden" >
				<input name="data[comment][foreign_model]" class="comment_foreign_model required" maxlength="36" type="hidden" >
