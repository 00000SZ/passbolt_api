<%
// If the permission is direct.
if (mappedItem.isDirect) {
    cssClasses.push('direct-permission');
} else {
    cssClasses.push('inherited-permission');
}

// Get the available permission types.
var availablePermissionTypes = {};
for (var permType in passbolt.model.PermissionType.PERMISSION_TYPES) {
    availablePermissionTypes[permType] = passbolt.model.PermissionType.toString(permType);
}
%>

<li id="<%= mappedItem.id %>" <%= (el) -> el.data( itemClass.fullName, item ) %> class="row <%= cssClasses.join(' ') %>">

    <div class="avatar">
        <img src="<%= mappedItem.aroAvatarPath %>"/>
    </div>

    <div class="group">
        <span class="name"><%= mappedItem.acoLabel %></span>
        <span class="details"><a href="#"><%= mappedItem.acoDetails %></a></span>
    </div>

    <div class="select rights">
        <form id="js_perm_edit_form_<%= mappedItem.id %>" class="js_perm_edit_form">
            <input class="js_perm_edit_form_id" type="hidden" />
            <select class="js_perm_edit_form_type permission">
            </select>
        </form>
    </div>

    <div class="actions">
        <%
        // If the permission is direct.
        // The user can delete it directly
        if (mappedItem.isDirect) { %>
        <a href="#" class="js_perm_delete close" title="<%= __('remove') %>">
            <i class="icon close no-text"></i>
            <span><%= __('remove') %></span>
        </a>
        <% }
        // Otherwise, if the permission is indirect. Display a link to the inherited permission.
        else { %>
        <a href="#" class="js_perm_goto" title="<%= __('go to parent permission') %>">
            <i class="icon levelup no-text"></i>
            <span><%= __('go to parent permission') %></span>
        </a>
        <% } %>
    </div>

</li>
