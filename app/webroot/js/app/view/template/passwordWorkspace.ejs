<div class="js_workspace grid_16 alpha omega">

	<!-----------------------------------------------------------------------------
	Workspace header bar
	----------------------------------------------------------------------------->

	<div class="workspace_label grid_3 alpha">
		<%= label %>
	</div>

	<div class="js_workspace_actions_container workspace_actions_container grid_7">
		<ul>
			<li class="user_menu_button_container">
				<div id="js_request_resource_creation_button" class="user_menu_button_create new_button_icon button_icon"><%= __('CREATE') %></div>
			</li>
			<li class="user_menu_button_container">
				<div id="js_request_resource_edition_button" class="edit_button_icon button_icon"/>
			</li>
			<li class="user_menu_button_container">
				<div id="js_request_resource_deletion_button" class="trash_button_icon button_icon"/>
			</li>
			<li class="user_menu_button_container">
				<div id="js_request_resource_sharing_button" class="share_button_icon button_icon"/>
			</li>
			<li class="user_menu_button_container">
				<div id="js_request_resource_more_button" class="user_menu_button_more menu_button_dropdown_icon button_icon"><%= __('MORE') %></div>
			</li>
		</ul>
	</div>

	<div class="js_workspace_view_actions_container workspace_view_actions_container grid_6 omega">
		<ul>
			<li>
				<button id="js_view_1_button">View 1</button>
			</li>
			<li>
				<button id="js_view_2_resource_button">View 2</button>
			</li>
			<li>
				<button id="js_view_custom_resource_button">Custom</button>
			</li>
		</ul>
	</div>
	
	<div class="clear"></div>
	
	<!-----------------------------------------------------------------------------
	Main area
	----------------------------------------------------------------------------->

	<div class="js_workspace_sidebar_first grid_3 alpha">
	</div>

	<div class="js_workspace_main grid_7">
	</div>

	<div class="js_workspace_sidebar_second grid_6 omega">
	</div>

</div>
